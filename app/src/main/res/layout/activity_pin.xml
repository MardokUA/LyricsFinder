<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/pinZone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:inputType="textPassword"
        android:letterSpacing="0.35"
        android:maxLength="4"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="72sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/topGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="false"
        tools:text="1234" />

    <android.support.constraint.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="112dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinOne"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/pin_button_selector"
        android:text="1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pinTwo"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGuideline" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinTwo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/pin_button_selector"
        android:text="2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/pinOne"
        app:layout_constraintEnd_toStartOf="@+id/pinThree"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/pinOne" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinThree"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/pin_button_selector"
        android:text="3"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/pinOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/pinTwo" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinFour"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/pin_button_selector"
        android:text="4"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pinFive"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinOne" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinFive"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/pin_button_selector"
        android:text="5"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/pinFour"
        app:layout_constraintEnd_toStartOf="@+id/pinSix"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/pinFour" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinSix"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/pin_button_selector"
        android:text="6"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/pinFour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/pinFive" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinSeven"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/pin_button_selector"
        android:text="7"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pinEight"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinFour" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinEight"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/pin_button_selector"
        android:text="8"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/pinSeven"
        app:layout_constraintEnd_toStartOf="@+id/pinNine"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/pinSeven" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinNine"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/pin_button_selector"
        android:text="9"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/pinSeven"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/pinEight" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pinZero"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/pin_button_selector"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinEight" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/pinBackspace"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@null"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/pinZero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pinZero"
        app:layout_constraintTop_toTopOf="@+id/pinZero"
        app:srcCompat="@drawable/button_backspace_selector" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/pinForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Забыли пароль"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pinAnotherAcc"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/pinAnotherAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Другой аккаунт"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pinForgotPass" />

</android.support.constraint.ConstraintLayout>